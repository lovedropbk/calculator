<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <!-- ========================================== -->
    <!-- ADAPTIVE TRIGGERS & VISUAL STATES         -->
    <!-- ========================================== -->
    
    <!-- Window Size Breakpoints -->
    <x:Double x:Key="CompactWindowWidth">640</x:Double>
    <x:Double x:Key="MediumWindowWidth">1008</x:Double>
    <x:Double x:Key="WideWindowWidth">1366</x:Double>
    
    <!-- Responsive Column Widths -->
    <GridLength x:Key="CompactPanelWidth">320</GridLength>
    <GridLength x:Key="StandardPanelWidth">360</GridLength>
    <GridLength x:Key="WidePanelWidth">400</GridLength>
    
    <!-- Responsive Margins and Padding -->
    <Thickness x:Key="CompactMargin">8,8,8,8</Thickness>
    <Thickness x:Key="StandardMargin">12,12,12,12</Thickness>
    <Thickness x:Key="WideMargin">16,16,16,16</Thickness>
    
    <!-- ========================================== -->
    <!-- RESPONSIVE GRID STYLES                    -->
    <!-- ========================================== -->
    
    <Style x:Key="ResponsiveGridStyle" TargetType="Grid">
        <Setter Property="Padding" Value="{StaticResource StandardMargin}"/>
        <Setter Property="RowSpacing" Value="8"/>
        <Setter Property="ColumnSpacing" Value="8"/>
    </Style>
    
    <!-- ========================================== -->
    <!-- RESPONSIVE CARD LAYOUTS                   -->
    <!-- ========================================== -->
    
    <Style x:Key="ResponsiveCardGrid" TargetType="Grid">
        <Setter Property="MinWidth" Value="320"/>
        <Setter Property="MaxWidth" Value="1200"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>
    
    <!-- ========================================== -->
    <!-- SCROLLVIEWER RESPONSIVE BEHAVIOR          -->
    <!-- ========================================== -->
    
    <Style x:Key="ResponsiveScrollViewer" TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="ZoomMode" Value="Disabled"/>
        <Setter Property="VerticalScrollMode" Value="Auto"/>
        <Setter Property="HorizontalScrollMode" Value="Auto"/>
    </Style>
    
    <!-- ========================================== -->
    <!-- DATAGRID RESPONSIVE COLUMNS               -->
    <!-- ========================================== -->
    
    <Style x:Key="ResponsiveDataGridColumnHeader" TargetType="TextBlock">
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        <Setter Property="TextWrapping" Value="NoWrap"/>
        <Setter Property="Margin" Value="8,4,8,4"/>
    </Style>
    
    <!-- ========================================== -->
    <!-- ADAPTIVE PANEL TEMPLATE                   -->
    <!-- ========================================== -->
    
    <ControlTemplate x:Key="AdaptivePanelTemplate" TargetType="ContentControl">
        <Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="AdaptiveStates">
                    <!-- Compact State (< 640px) -->
                    <VisualState x:Name="CompactState">
                        <VisualState.StateTriggers>
                            <AdaptiveTrigger MinWindowWidth="0"/>
                        </VisualState.StateTriggers>
                        <VisualState.Setters>
                            <Setter Target="ContentGrid.Padding" Value="{StaticResource CompactMargin}"/>
                            <Setter Target="ContentGrid.MinWidth" Value="300"/>
                        </VisualState.Setters>
                    </VisualState>
                    
                    <!-- Medium State (640px - 1008px) -->
                    <VisualState x:Name="MediumState">
                        <VisualState.StateTriggers>
                            <AdaptiveTrigger MinWindowWidth="640"/>
                        </VisualState.StateTriggers>
                        <VisualState.Setters>
                            <Setter Target="ContentGrid.Padding" Value="{StaticResource StandardMargin}"/>
                            <Setter Target="ContentGrid.MinWidth" Value="360"/>
                        </VisualState.Setters>
                    </VisualState>
                    
                    <!-- Wide State (> 1008px) -->
                    <VisualState x:Name="WideState">
                        <VisualState.StateTriggers>
                            <AdaptiveTrigger MinWindowWidth="1008"/>
                        </VisualState.StateTriggers>
                        <VisualState.Setters>
                            <Setter Target="ContentGrid.Padding" Value="{StaticResource WideMargin}"/>
                            <Setter Target="ContentGrid.MinWidth" Value="400"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            
            <Grid x:Name="ContentGrid">
                <ContentPresenter Content="{TemplateBinding Content}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
            </Grid>
        </Grid>
    </ControlTemplate>
    
    <!-- ========================================== -->
    <!-- RESPONSIVE INPUT FIELD WIDTHS             -->
    <!-- ========================================== -->
    
    <Style x:Key="ResponsiveTextBox" TargetType="TextBox">
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="MaxWidth" Value="400"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>
    
    <Style x:Key="ResponsiveNumberBox" TargetType="muxc:NumberBox">
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="MaxWidth" Value="400"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>
    
    <Style x:Key="ResponsiveComboBox" TargetType="ComboBox">
        <Setter Property="MinWidth" Value="150"/>
        <Setter Property="MaxWidth" Value="400"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>
    
    <!-- ========================================== -->
    <!-- RESPONSIVE BUTTON LAYOUTS                 -->
    <!-- ========================================== -->
    
    <Style x:Key="ResponsiveButtonPanel" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Spacing" Value="8"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- ========================================== -->
    <!-- RESPONSIVE TAB HEADERS                    -->
    <!-- ========================================== -->
    
    <Style x:Key="ResponsiveTabViewItem" TargetType="TabViewItem">
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MaxWidth" Value="300"/>
        <Setter Property="Padding" Value="12,8,12,8"/>
    </Style>

</ResourceDictionary>
