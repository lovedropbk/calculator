<Window
    x:Class="FinancialCalculator.WinUI3.MainWindow"
    x:Name="Root"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d">

    <!-- MARK: Root TabView -->
    <TabView x:Name="MainTabView" TabWidthMode="Equal" IsAddTabButtonVisible="False" CanDragTabs="False" CanReorderTabs="False"
             VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        
        <!-- MARK: Main Tab -->
        <TabView.TabItems>
            <TabViewItem Header="Main" IsClosable="False">
                <Grid x:Name="LayoutRoot" Background="Transparent">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto" MinHeight="150"/><!-- Bottom Summary -->
                        <RowDefinition Height="Auto" MaxHeight="50"/><!-- Footer -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <!-- Left: Deal Input Mask (narrower) -->
                        <ColumnDefinition Width="1*" MinWidth="360"/>
                        <!-- Right: Tables + Insights (wider) -->
                        <ColumnDefinition Width="2*" MinWidth="600"/>
                    </Grid.ColumnDefinitions>

        <!-- MARK: LEFT - Deal Input Mask -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Margin="12,12,8,12" Style="{StaticResource CardContainerStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Spacing="12">
        
                    <!-- Deal Inputs -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
        
                        <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="Deal Inputs" Style="{StaticResource CardHeaderTextStyle}"/>
        
                        <!-- Product (display HP, mySTAR, FL, OL; map to engine tags) -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Product" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" SelectedValue="{Binding Product, Mode=TwoWay}" SelectedValuePath="Tag" MinWidth="220" Margin="8,0,0,0">
                            <ComboBoxItem Content="HP" Tag="HP"/>
                            <ComboBoxItem Content="mySTAR" Tag="mySTAR"/>
                            <ComboBoxItem Content="FL" Tag="F-Lease"/>
                            <ComboBoxItem Content="OL" Tag="Op-Lease"/>
                        </ComboBox>
        
                        <!-- Term (months) -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Term (months)" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" SelectedItem="{Binding TermMonths, Mode=TwoWay}" MinWidth="220" Margin="8,0,0,0">
                            <x:Int32>12</x:Int32>
                            <x:Int32>24</x:Int32>
                            <x:Int32>36</x:Int32>
                            <x:Int32>48</x:Int32>
                            <x:Int32>60</x:Int32>
                            <x:Int32>72</x:Int32>
                            <x:Int32>84</x:Int32>
                        </ComboBox>
        
                        <!-- Payment Mode (Timing binding) -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Payment Mode" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" SelectedValue="{Binding Timing, Mode=TwoWay}" SelectedValuePath="Tag" MinWidth="220" Margin="8,0,0,0">
                            <ComboBoxItem Content="arrears" Tag="arrears"/>
                            <ComboBoxItem Content="in advance" Tag="advance"/>
                        </ComboBox>
        
                        <!-- Balloon: unit first then value (inside value area) -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Balloon" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <Grid Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="8,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="72"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0" SelectedItem="{Binding BalloonUnit, Mode=TwoWay}" IsEnabled="{Binding IsBalloonEnabled}" Margin="0,0,6,0">
                                <x:String>THB</x:String>
                                <x:String>%</x:String>
                            </ComboBox>
                            <TextBox Grid.Column="1" Text="{Binding BalloonValueEntry, Mode=TwoWay}" PlaceholderText="{Binding BalloonPlaceholder}" IsEnabled="{Binding IsBalloonEnabled}"/>
                        </Grid>
        
                        <!-- Price: THB only (input spans two columns) -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Price" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <muxc:NumberBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Value="{Binding PriceExTax, Mode=TwoWay}" PlaceholderText="{Binding PricePlaceholder}" NumberFormatter="{StaticResource GroupedZeroFormatter}" Width="{StaticResource ValueAreaWidth}" Margin="8,0,0,0"/>
        
                        <!-- Down Payment: unit first then value (inside value area) -->
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Down payment" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <Grid Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Margin="8,0,0,0" Width="{StaticResource ValueAreaWidth}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="72"/>
                                <ColumnDefinition Width="288"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0" SelectedItem="{Binding DownPaymentUnit, Mode=TwoWay}" Margin="0,0,6,0">
                                <x:String>THB</x:String>
                                <x:String>%</x:String>
                            </ComboBox>
                            <muxc:NumberBox Grid.Column="1" Value="{Binding DownPaymentValueEntry, Mode=TwoWay}" PlaceholderText="{Binding DownPaymentPlaceholder}" NumberFormatter="{StaticResource GroupedZeroFormatter}"/>
                        </Grid>
        
                        <!-- Subsidy budget -->
                        <TextBlock Grid.Row="7" Grid.Column="0" Text="Subsidy budget (THB)" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <muxc:NumberBox Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Value="{Binding SubsidyBudget, Mode=TwoWay}" PlaceholderText="THB" NumberFormatter="{StaticResource GroupedZeroFormatter}" Width="{StaticResource ValueAreaWidth}" Margin="8,0,0,0" IsEnabled="{Binding SubsidyBudgetIsEnabled}"/>
        
                        <!-- IDCs - Dealer Commission -->
                        <TextBlock Grid.Row="8" Grid.Column="0" Text="IDCs â€“ Commission" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <Grid Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" Margin="8,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="72"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- Unified entry: unit + value -->
                            <ComboBox Grid.Row="0" Grid.Column="0" SelectedItem="{Binding CommissionEntryUnit, Mode=TwoWay}" Margin="0,0,6,0">
                                <x:String>auto</x:String>
                                <x:String>%</x:String>
                                <x:String>THB</x:String>
                            </ComboBox>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CommissionEntryValue, Mode=TwoWay}" IsEnabled="{Binding IsCommissionEntryEditable}"/>
                            <!-- Summary pill -->
                            <Border Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource PillBorderStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock>
                                        <Run Text="{Binding DealerCommissionMode}"/>
                                        <Run Text=": "/>
                                        <Run Text="{Binding DealerCommissionPctText}"/>
                                        <Run Text="% ("/>
                                        <Run Text="{Binding DealerCommissionResolvedAmtText}"/>
                                        <Run Text=" THB)"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>
        
                        <!-- Optional override editors (shown only when override) -->
                        <StackPanel Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="8" Margin="8,0,0,0"
                                    Visibility="{Binding DealerCommissionMode, Converter={StaticResource StringEqualsToVisibilityConverter}, ConverterParameter=override}">
                            <TextBlock Text="Pct %" Style="{StaticResource LabelTextStyle}"/>
                            <TextBox Width="100" Text="{Binding DealerCommissionPct, Mode=TwoWay}"/>
                            <TextBlock Text="Amt THB" Style="{StaticResource LabelTextStyle}" Margin="8,0,0,0"/>
                            <TextBox Width="140" Text="{Binding DealerCommissionAmt, Mode=TwoWay}"/>
                        </StackPanel>
        
                        <!-- IDCs - Other (THB) -->
                        <TextBlock Grid.Row="10" Grid.Column="0" Text="IDCs â€“ Other (THB)" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <muxc:NumberBox Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="2" Value="{Binding IdcOther, Mode=TwoWay}" PlaceholderText="THB" NumberFormatter="{StaticResource GroupedZeroFormatter}" Width="{StaticResource ValueAreaWidth}" Margin="8,0,0,0"/>
        
                        <!-- Rate mode: RadioButtons (bind SelectedIndex) -->
                        <TextBlock Grid.Row="11" Grid.Column="0" Text="Rate mode" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <RadioButtons Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="2" SelectedIndex="{Binding RateModeIndex, Mode=TwoWay}" Margin="8,0,0,0">
                            <x:String>Fixed Rate</x:String>
                            <x:String>Target Installment</x:String>
                        </RadioButtons>
        
                        <!-- Customer rate (visible if fixed rate) -->
                        <TextBlock Grid.Row="12" Grid.Column="0" Text="Customer rate (% p.a.)" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Visibility="{Binding IsFixedRateMode, Converter={StaticResource StringEqualsToVisibilityConverter}, ConverterParameter=True}"/>
                        <TextBox Grid.Row="12" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding CustomerRatePct, Mode=TwoWay}" MinWidth="160" Margin="8,0,0,0"
                                 Visibility="{Binding IsFixedRateMode, Converter={StaticResource StringEqualsToVisibilityConverter}, ConverterParameter=True}"/>
        
                        <!-- Target installment (visible if target installment) -->
                        <TextBlock Grid.Row="13" Grid.Column="0" Text="Target installment (THB)" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left" VerticalAlignment="Center"
                                   Visibility="{Binding IsTargetInstallmentMode, Converter={StaticResource StringEqualsToVisibilityConverter}, ConverterParameter=True}"/>
                        <TextBox Grid.Row="13" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding TargetInstallment, Mode=TwoWay}" MinWidth="180" Margin="8,0,0,0"
                                 Visibility="{Binding IsTargetInstallmentMode, Converter={StaticResource StringEqualsToVisibilityConverter}, ConverterParameter=True}"/>
        
                        <!-- Primary action (emphasized) -->
                        <StackPanel Grid.Row="14" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Vertical" Margin="8,16,0,0">
                            <Button Content="Recalculate" Command="{Binding RecalculateCommand}" HorizontalAlignment="Left" Style="{StaticResource AccentButtonStyle}"/>
                            <!-- Unified validation summary (optional, binds to Status) -->
                            <TextBlock Text="{Binding Status}" Style="{StaticResource ErrorTextStyle}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- MARK: RIGHT - Standard Campaigns, My Campaigns -->
        <Grid x:Name="CampaignsGrid" Grid.Row="0" Grid.Column="1" Margin="8,12,12,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MaxHeight="350"/>   <!-- Standard Campaigns (7 rows) -->
                <RowDefinition Height="*"/> <!-- My Campaigns (rest) -->
            </Grid.RowDefinitions>

            <!-- Standard Campaigns -->
            <Border Grid.Row="0" Style="{StaticResource CardContainerStyle}" Margin="0,0,0,8" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Standard Campaigns" Style="{StaticResource CardHeaderTextStyle}"/>
                    <controls:DataGrid x:Name="StandardGrid" Grid.Row="1"
                                       VerticalAlignment="Stretch"
                                       HorizontalAlignment="Stretch"
                                       ItemsSource="{Binding StandardCampaigns}"
                                       SelectedItem="{Binding SelectedCampaign, Mode=TwoWay}"
                                       HeadersVisibility="Column"
                                       CanUserSortColumns="False"
                                       CanUserReorderColumns="True"
                                       CanUserResizeColumns="True"
                                       AutoGenerateColumns="False"
                                       IsReadOnly="True"
                                       GridLinesVisibility="All">
                        <controls:DataGrid.Columns>
                            <controls:DataGridTemplateColumn Width="60">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Copy" Command="{Binding DataContext.CopyToMyCampaignsCommand, ElementName=CampaignsGrid}" CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>
                            <controls:DataGridTextColumn Header="Campaign Name" Binding="{Binding Title}" Width="200"/>
                            <controls:DataGridTextColumn Header="Monthly Installment" Binding="{Binding Monthly}" Width="120"/>
                            <controls:DataGridTextColumn Header="Cust. Interest Rate" Binding="{Binding Effective}" Width="140"/>
                            <controls:DataGridTextColumn Header="Downpayment" Binding="{Binding Downpayment}" Width="120"/>
                            <controls:DataGridTextColumn Header="Cash Discount" Binding="{Binding CashDiscount}" Width="120"/>
                            <controls:DataGridTextColumn Header="FS SubDown" Binding="{Binding FSSubDown}" Width="120"/>
                            <controls:DataGridTextColumn Header="FS SubInterest" Binding="{Binding FSSubInterest}" Width="140"/>
                            <controls:DataGridTextColumn Header="FS FreeMBSP" Binding="{Binding FSFreeMBSP}" Width="120"/>
                            <controls:DataGridTextColumn Header="Subsidy utilized" Binding="{Binding SubsidyUsed}" Width="140"/>
                            <controls:DataGridTextColumn Header="Dealer Comm." Binding="{Binding DealerCommission}" Width="140"/>
                            <controls:DataGridTextColumn Header="Acq. RoRAC" Binding="{Binding RoRAC}" Width="120"/>
                            <controls:DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="220"/>
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>
                </Grid>
            </Border>

            <!-- My Campaigns -->
            <Border Grid.Row="1" Style="{StaticResource CardContainerStyle}" Margin="0,0,0,8" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="My Campaigns" Style="{StaticResource CardHeaderTextStyle}"/>
                        <Button Content="+ New Bank Campaign" Command="{Binding NewBankCampaignCommand}" Margin="12,0,0,0"/>
                        <Button Content="Load Campaigns" Command="{Binding LoadCampaignsCommand}"/>
                        <Button Content="Save All Changes" Command="{Binding SaveAllCampaignsCommand}"/>
                        <Button Content="Clear Campaigns" Command="{Binding ClearCampaignsCommand}"/>
                    </StackPanel>
                    <controls:DataGrid x:Name="MyGrid" Grid.Row="1"
                                       ItemsSource="{Binding MyCampaigns}"
                                       SelectedItem="{Binding SelectedMyCampaign, Mode=TwoWay}"
                                       HeadersVisibility="Column"
                                       CanUserSortColumns="False"
                                       CanUserReorderColumns="True"
                                       CanUserResizeColumns="True"
                                       AutoGenerateColumns="False"
                                       IsReadOnly="False"
                                       GridLinesVisibility="All"
                                       VerticalAlignment="Stretch"
                                       HorizontalAlignment="Stretch">
                        <controls:DataGrid.Columns>
                            <!-- Placeholder for alignment with Standard Copy column -->
                            <controls:DataGridTemplateColumn Width="60">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock/>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>
                            <controls:DataGridTextColumn Header="Campaign Name" Binding="{Binding Title, Mode=TwoWay}" Width="200"/>
                            <controls:DataGridTextColumn Header="Monthly Installment" Binding="{Binding Monthly}" Width="120" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="Cust. Interest Rate" Binding="{Binding Effective}" Width="140" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="Downpayment" Binding="{Binding Downpayment}" Width="120" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="Cash Discount" Binding="{Binding CashDiscount}" Width="120" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="FS SubDown" Binding="{Binding FSSubDown}" Width="120" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="FS SubInterest" Binding="{Binding FSSubInterest}" Width="140" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="FS FreeMBSP" Binding="{Binding FSFreeMBSP}" Width="120" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="Subsidy utilized" Binding="{Binding SubsidyUsed}" Width="140" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="Dealer Comm." Binding="{Binding DealerCommission}" Width="140" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="Acq. RoRAC" Binding="{Binding RoRAC}" Width="120" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="Notes" Binding="{Binding Notes, Mode=TwoWay}" Width="220"/>
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>
                </Grid>
            </Border>
        </Grid>

        <!-- MARK: BOTTOM SUMMARY: Campaign Details + Key Metrics -->
        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource CardContainerStyle}" Margin="8,0,12,8" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Campaign Details (left) -->
                    <StackPanel Grid.Column="0" Spacing="8">
                        <TextBlock Text="Campaign Details" Style="{StaticResource SectionHeaderTextStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Row 0 -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Campaign Name:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ActiveCampaign.Title}" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="Term (months):" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="0" Grid.Column="4" Text="{Binding TermMonths}"/>

                            <!-- Row 1 -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Financed Amount:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Metrics.FinancedAmount}" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="Subsidy budget (THB):" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding SubsidyBudget}"/>

                            <!-- Row 2 -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Subsidy utilized (THB):" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ActiveSubsidyUtilizedText}"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="Subsidy remaining (THB):" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="2" Grid.Column="4" Text="{Binding SubsidyRemainingText}"/>

                            <!-- Row 3 -->
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Dealer Commissions Paid (THB):" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DealerCommissionResolvedAmtText}"/>
                            <TextBlock Grid.Row="3" Grid.Column="3" Text="IDCs - Others (THB):" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="3" Grid.Column="4" Text="{Binding IdcOtherText}"/>

                            <!-- Row 4 -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="IDC - Free Insurance (THB):" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding ActiveFsInsuranceText}"/>
                            <TextBlock Grid.Row="4" Grid.Column="3" Text="IDC - Free MBSP (THB):" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="4" Grid.Column="4" Text="{Binding ActiveFsMbspText}"/>
                        </Grid>
                    </StackPanel>

                    <!-- Key Metrics Summary (right) -->
                    <StackPanel Grid.Column="1" Spacing="8">
                        <TextBlock Text="Key Metrics Summary" Style="{StaticResource SectionHeaderTextStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Row 0 -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Monthly Installment:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Metrics.MonthlyInstallment}" FontWeight="SemiBold"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="Nominal Customer Rate:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="0" Grid.Column="4" Text="{Binding Metrics.NominalRate}"/>

                            <!-- Row 1 -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Effective Rate:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Metrics.EffectiveRate}"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="Financed amount:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding Metrics.FinancedAmount}"/>

                            <!-- Row 2: Acquisition RoRAC with foldout -->
                            <ToggleButton Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" x:Name="RoRACDetailsToggle" HorizontalAlignment="Left" Margin="0,0,0,4">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Acquisition RoRAC:" Style="{StaticResource LabelTextStyle}"/>
                                    <TextBlock Text="{Binding Metrics.RoRAC}" FontWeight="SemiBold"/>
                                    <TextBlock Text="(show details)" Opacity="0.7"/>
                                </StackPanel>
                            </ToggleButton>
                            <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" x:Name="RoRACDetailsGrid" Visibility="{Binding IsChecked, ElementName=RoRACDetailsToggle, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/> <!-- 0 -->
                                    <RowDefinition Height="Auto"/> <!-- 1 -->
                                    <RowDefinition Height="Auto"/> <!-- 2 -->
                                    <RowDefinition Height="Auto"/> <!-- 3 -->
                                    <RowDefinition Height="Auto"/> <!-- 4 -->
                                    <RowDefinition Height="Auto"/> <!-- 5 -->
                                    <RowDefinition Height="Auto"/> <!-- 6 -->
                                    <RowDefinition Height="Auto"/> <!-- 7 -->
                                    <RowDefinition Height="Auto"/> <!-- 8 -->
                                    <RowDefinition Height="Auto"/> <!-- 9 -->
                                    <RowDefinition Height="Auto"/> <!-- 10 -->
                                    <RowDefinition Height="Auto"/> <!-- 11 separator -->
                                    <RowDefinition Height="Auto"/> <!-- 12 -->
                                    <RowDefinition Height="Auto"/> <!-- 13 -->
                                    <RowDefinition Height="Auto"/> <!-- 14 -->
                                    <RowDefinition Height="Auto"/> <!-- 15 -->
                                    <RowDefinition Height="Auto"/> <!-- 16 separator -->
                                    <RowDefinition Height="Auto"/> <!-- 17 -->
                                    <RowDefinition Height="Auto"/> <!-- 18 -->
                                    <RowDefinition Height="Auto"/> <!-- 19 -->
                                </Grid.RowDefinitions>

                                <!-- Legacy Walk-style detailed waterfall -->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Deal IRR (effective):" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding WfDealIRREffectiveText}"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Deal IRR (nominal):" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding WfDealIRRNominalText}"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Cost of debt (matched):" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding WfCostOfDebtMatchedText}"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Matched funded spread:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding WfMatchedFundedSpreadText}"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Gross interest margin:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding WfGrossInterestMarginText}"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Capital advantage:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding WfCapitalAdvantageText}"/>

                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Net interest margin:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding WfNetInterestMarginText}"/>

                                <TextBlock Grid.Row="7" Grid.Column="0" Text="Cost of credit risk:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding WfCostOfCreditRiskText}"/>

                                <TextBlock Grid.Row="8" Grid.Column="0" Text="OPEX:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding WfOPEXText}"/>

                                <TextBlock Grid.Row="9" Grid.Column="0" Text="IDC upfront (net):" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding WfIDCUpfrontText}"/>

                                <TextBlock Grid.Row="10" Grid.Column="0" Text="IDC periodic (net):" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Row="10" Grid.Column="1" Text="{Binding WfIDCPeriodicText}"/>

                                <!-- Separator for Separated Values -->
                                <Border Grid.Row="11" Grid.ColumnSpan="2" Height="1" Background="{ThemeResource SystemControlForegroundBaseLowBrush}" Margin="0,4,0,4"/>

                                <!-- Separated IDC/Subsidy Values -->
                                <TextBlock Grid.Row="12" Grid.Column="0" Text="  - IDC Upfront Cost %:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left" Opacity="0.9"/>
                                <TextBlock Grid.Row="12" Grid.Column="1" Text="{Binding WfIDCUpfrontCostPctText}" Opacity="0.9"/>

                                <TextBlock Grid.Row="13" Grid.Column="0" Text="  - IDC Periodic Cost %:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left" Opacity="0.9"/>
                                <TextBlock Grid.Row="13" Grid.Column="1" Text="{Binding WfIDCPeriodicCostPctText}" Opacity="0.9"/>

                                <TextBlock Grid.Row="14" Grid.Column="0" Text="  - Subsidy Upfront %:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left" Opacity="0.9"/>
                                <TextBlock Grid.Row="14" Grid.Column="1" Text="{Binding WfSubsidyUpfrontPctText}" Opacity="0.9"/>

                                <TextBlock Grid.Row="15" Grid.Column="0" Text="  - Subsidy Periodic %:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left" Opacity="0.9"/>
                                <TextBlock Grid.Row="15" Grid.Column="1" Text="{Binding WfSubsidyPeriodicPctText}" Opacity="0.9"/>

                                <!-- Another separator -->
                                <Border Grid.Row="16" Grid.ColumnSpan="2" Height="1" Background="{ThemeResource SystemControlForegroundBaseLowBrush}" Margin="0,4,0,4"/>

                                <TextBlock Grid.Row="17" Grid.Column="0" Text="= Net EBIT Margin:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Row="17" Grid.Column="1" Text="{Binding WfNetEBITMarginText}"/>

                                <TextBlock Grid.Row="18" Grid.Column="0" Text="/ Economic Capital:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Row="18" Grid.Column="1" Text="{Binding WfEconomicCapitalText}"/>

                                <TextBlock Grid.Row="19" Grid.Column="0" Text="= Acquisition RoRAC:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Row="19" Grid.Column="1" Text="{Binding Metrics.RoRAC}"/>
                            </Grid>

                            <TextBlock Grid.Row="2" Grid.Column="3" Text="IDC Total:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="2" Grid.Column="4" Text="{Binding IdcTotalText}"/>

                            <!-- Row 4 -->
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="IDC - Dealer Comm/other dealer benefits.:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding DealerCommissionResolvedAmtText}"/>
                            <TextBlock Grid.Row="4" Grid.Column="3" Text="IDC - Other:" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Left"/>
                            <TextBlock Grid.Row="4" Grid.Column="4" Text="{Binding IdcOtherText}"/>

                            <!-- Row 5: Export action -->
                            <Button Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="2" Content="Export XLSX" Command="{Binding ExportXlsxCommand}" HorizontalAlignment="Right" Margin="0,8,0,0"/>
                        </Grid>
                    </StackPanel>
            </Grid>
        </Border>

                    <!-- MARK: FOOTER -->
        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="Transparent" Padding="12,8" Margin="12,0,12,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding Status}" VerticalAlignment="Center" Opacity="0.8"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Export PDF" />
                    <Button Content="Save Scenario" />
                </StackPanel>
            </Grid>
                    </Border>
                </Grid>
            </TabViewItem>
            
            <!-- MARK: Cashflows Tab -->
            <TabViewItem Header="Cashflows" IsClosable="False">
                <Grid Background="Transparent" Padding="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header with export button -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Cashflow Schedule" Style="{StaticResource CardHeaderTextStyle}" FontSize="24"/>
                        <Button Grid.Column="1" Content="Export XLSX" Command="{Binding ExportXlsxCommand}" VerticalAlignment="Center"/>
                    </Grid>
                    
                    <!-- Cashflow Table -->
                    <Border Grid.Row="1" Style="{StaticResource CardContainerStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                        <controls:DataGrid x:Name="CashflowGrid"
                                           ItemsSource="{Binding Cashflows}"
                                           HeadersVisibility="Column"
                                           CanUserSortColumns="True"
                                           CanUserReorderColumns="True"
                                           CanUserResizeColumns="True"
                                           AutoGenerateColumns="False"
                                           IsReadOnly="True"
                                           GridLinesVisibility="All"
                                           VerticalAlignment="Stretch"
                                           HorizontalAlignment="Stretch">
                            <controls:DataGrid.Columns>
                                <controls:DataGridTextColumn Header="Period" Binding="{Binding Period}" Width="100"/>
                                <controls:DataGridTextColumn Header="Principal" Binding="{Binding Principal}" Width="150"/>
                                <controls:DataGridTextColumn Header="Interest" Binding="{Binding Interest}" Width="150"/>
                                <controls:DataGridTextColumn Header="Fees" Binding="{Binding Fees}" Width="150"/>
                                <controls:DataGridTextColumn Header="Balance" Binding="{Binding Balance}" Width="150"/>
                                <controls:DataGridTextColumn Header="Cashflow" Binding="{Binding Cashflow}" Width="150"/>
                            </controls:DataGrid.Columns>
                        </controls:DataGrid>
                    </Border>
                    
                    <!-- Footer info -->
                    <TextBlock Grid.Row="2" Text="{Binding Status}" Margin="0,12,0,0" Opacity="0.8"/>
                </Grid>
            </TabViewItem>
        </TabView.TabItems>
    </TabView>
</Window>
