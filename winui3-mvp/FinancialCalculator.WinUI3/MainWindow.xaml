<Window
    x:Class="FinancialCalculator.WinUI3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d">

    <!-- MARK: Root Layout -->
    <Grid x:Name="Root" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!-- Left: Deal Input Mask (narrower) -->
            <ColumnDefinition Width="1*" MinWidth="360"/>
            <!-- Right: Tables + Insights (wider) -->
            <ColumnDefinition Width="2*" MinWidth="600"/>
        </Grid.ColumnDefinitions>

        <!-- MARK: LEFT - Deal Input Mask -->
        <ScrollViewer Grid.Row="0" Grid.Column="0" Margin="12,12,8,12" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="12">

                <!-- Deal Inputs -->
                <Border Style="{StaticResource CardContainerStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="Deal Inputs" Style="{StaticResource CardHeaderTextStyle}"/>

                        <!-- Product (display HP, mySTAR, FL, OL; map to engine tags) -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Product" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" SelectedValue="{Binding Product, Mode=TwoWay}" SelectedValuePath="Tag" MinWidth="220" Margin="8,0,0,0">
                            <ComboBoxItem Content="HP" Tag="HP"/>
                            <ComboBoxItem Content="mySTAR" Tag="mySTAR"/>
                            <ComboBoxItem Content="FL" Tag="F-Lease"/>
                            <ComboBoxItem Content="OL" Tag="Op-Lease"/>
                        </ComboBox>

                        <!-- Term (months) -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Term (months)" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" SelectedItem="{Binding TermMonths, Mode=TwoWay}" MinWidth="220" Margin="8,0,0,0">
                            <x:Int32>12</x:Int32>
                            <x:Int32>24</x:Int32>
                            <x:Int32>36</x:Int32>
                            <x:Int32>48</x:Int32>
                            <x:Int32>60</x:Int32>
                            <x:Int32>72</x:Int32>
                            <x:Int32>84</x:Int32>
                        </ComboBox>

                        <!-- Payment Mode (Timing binding) -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Payment Mode" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" SelectedValue="{Binding Timing, Mode=TwoWay}" SelectedValuePath="Tag" MinWidth="220" Margin="8,0,0,0">
                            <ComboBoxItem Content="arrears" Tag="arrears"/>
                            <ComboBoxItem Content="in advance" Tag="advance"/>
                        </ComboBox>

                        <!-- Balloon: unit first then value (inside value area) -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Balloon" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <Grid Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="8,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="72"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0" SelectedItem="{Binding BalloonUnit, Mode=TwoWay}" IsEnabled="{Binding IsBalloonEnabled}" Margin="0,0,6,0">
                                <x:String>THB</x:String>
                                <x:String>%</x:String>
                            </ComboBox>
                            <TextBox Grid.Column="1" Text="{Binding BalloonValueEntry, Mode=TwoWay}" PlaceholderText="{Binding BalloonPlaceholder}" IsEnabled="{Binding IsBalloonEnabled}"/>
                        </Grid>

                        <!-- Price: THB only (input spans two columns) -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Price" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding PriceExTax, Mode=TwoWay}" PlaceholderText="{Binding PricePlaceholder}" MinWidth="220" Margin="8,0,0,0"/>

                        <!-- Down Payment: unit first then value (inside value area) -->
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Down payment" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <Grid Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Margin="8,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="72"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0" SelectedItem="{Binding DownPaymentUnit, Mode=TwoWay}" Margin="0,0,6,0">
                                <x:String>THB</x:String>
                                <x:String>%</x:String>
                            </ComboBox>
                            <TextBox Grid.Column="1" Text="{Binding DownPaymentValueEntry, Mode=TwoWay}" PlaceholderText="{Binding DownPaymentPlaceholder}"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Subsidy / IDCs / Rate -->
                <Border Style="{StaticResource CardContainerStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Subsidy, IDCs &amp; Rate" Style="{StaticResource CardHeaderTextStyle}"/>

                        <!-- Subsidy budget -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Subsidy budget (THB)" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SubsidyBudget, Mode=TwoWay}" PlaceholderText="THB" MinWidth="220" Margin="8,0,0,0" IsEnabled="{Binding SubsidyBudgetIsEnabled}"/>

                        <!-- IDCs - Dealer Commission -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="IDCs â€“ Commission" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <Grid Grid.Row="2" Grid.Column="1" Margin="8,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="72"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!-- Unified entry: unit + value -->
                            <ComboBox Grid.Row="0" Grid.Column="0" SelectedItem="{Binding CommissionEntryUnit, Mode=TwoWay}" Margin="0,0,6,0">
                                <x:String>auto</x:String>
                                <x:String>%</x:String>
                                <x:String>THB</x:String>
                            </ComboBox>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CommissionEntryValue, Mode=TwoWay}" IsEnabled="{Binding IsCommissionEntryEditable}"/>
                            <!-- Summary pill -->
                            <Border Grid.Row="1" Grid.ColumnSpan="2" Style="{StaticResource PillBorderStyle}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock>
                                        <Run Text="{Binding DealerCommissionMode}"/>
                                        <Run Text=": "/>
                                        <Run Text="{Binding DealerCommissionPctText}"/>
                                        <Run Text="% ("/>
                                        <Run Text="{Binding DealerCommissionResolvedAmtText}"/>
                                        <Run Text=" THB)"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Optional override editors (shown only when override) -->
                        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Spacing="8" Margin="8,0,0,0"
                                    Visibility="{Binding DealerCommissionMode, Converter={StaticResource StringEqualsToVisibilityConverter}, ConverterParameter=override}">
                            <TextBlock Text="Pct %" Style="{StaticResource LabelTextStyle}"/>
                            <TextBox Width="100" Text="{Binding DealerCommissionPct, Mode=TwoWay}"/>
                            <TextBlock Text="Amt THB" Style="{StaticResource LabelTextStyle}" Margin="8,0,0,0"/>
                            <TextBox Width="140" Text="{Binding DealerCommissionAmt, Mode=TwoWay}"/>
                        </StackPanel>

                        <!-- IDCs - Other (THB) -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="IDCs â€“ Other (THB)" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding IdcOther, Mode=TwoWay}" PlaceholderText="THB" MinWidth="220" Margin="8,0,0,0"/>

                        <!-- Rate mode: RadioButtons (bind SelectedIndex) -->
                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Rate mode" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <RadioButtons Grid.Row="5" Grid.Column="1" SelectedIndex="{Binding RateModeIndex, Mode=TwoWay}" Margin="8,0,0,0">
                            <x:String>Fixed Rate</x:String>
                            <x:String>Target Installment</x:String>
                        </RadioButtons>

                        <!-- Customer rate (visible if fixed rate) -->
                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Customer rate (% p.a.)" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Right" VerticalAlignment="Center"
                                   Visibility="{Binding IsFixedRateMode, Converter={StaticResource StringEqualsToVisibilityConverter}, ConverterParameter=True}"/>
                        <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding CustomerRatePct, Mode=TwoWay}" MinWidth="160" Margin="8,0,0,0"
                                 Visibility="{Binding IsFixedRateMode, Converter={StaticResource StringEqualsToVisibilityConverter}, ConverterParameter=True}"/>

                        <!-- Target installment (visible if target installment) -->
                        <TextBlock Grid.Row="7" Grid.Column="0" Text="Target installment (THB)" Style="{StaticResource LabelTextStyle}" HorizontalAlignment="Right" VerticalAlignment="Center"
                                   Visibility="{Binding IsTargetInstallmentMode, Converter={StaticResource StringEqualsToVisibilityConverter}, ConverterParameter=True}"/>
                        <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding TargetInstallment, Mode=TwoWay}" MinWidth="180" Margin="8,0,0,0"
                                 Visibility="{Binding IsTargetInstallmentMode, Converter={StaticResource StringEqualsToVisibilityConverter}, ConverterParameter=True}"/>

                        <!-- Primary action (emphasized) -->
                        <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Vertical" Margin="8,16,0,0">
                            <Button Content="Recalculate" Command="{Binding RecalculateCommand}" HorizontalAlignment="Left" Style="{StaticResource AccentButtonStyle}"/>
                            <!-- Unified validation summary (optional, binds to Status) -->
                            <TextBlock Text="{Binding Status}" Style="{StaticResource ErrorTextStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- MARK: RIGHT - Standard Campaigns, My Campaigns, Insights -->
        <Grid Grid.Row="0" Grid.Column="1" Margin="8,12,12,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>   <!-- Standard Campaigns -->
                <RowDefinition Height="1.5*"/> <!-- My Campaigns -->
                <RowDefinition Height="2*"/>   <!-- Insights (Details/Metrics + Cashflows) -->
            </Grid.RowDefinitions>

            <!-- Standard Campaigns -->
            <Border Grid.Row="0" Style="{StaticResource CardContainerStyle}" Margin="0,0,0,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Standard Campaigns" Style="{StaticResource CardHeaderTextStyle}"/>
                    <controls:DataGrid x:Name="StandardGrid" Grid.Row="1"
                                       ItemsSource="{Binding StandardCampaigns}"
                                       SelectedItem="{Binding SelectedCampaign, Mode=TwoWay}"
                                       HeadersVisibility="Column"
                                       CanUserSortColumns="False"
                                       CanUserReorderColumns="True"
                                       CanUserResizeColumns="True"
                                       AutoGenerateColumns="False"
                                       IsReadOnly="True"
                                       GridLinesVisibility="All"
                                       MinRowHeight="36">
                        <controls:DataGrid.Columns>
                            <controls:DataGridTemplateColumn Width="60">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Copy" Command="{Binding DataContext.CopyToMyCampaignsCommand, ElementName=Root}" CommandParameter="{Binding}"/>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>
                            <controls:DataGridTextColumn Header="Campaign Name" Binding="{Binding Title}" Width="200"/>
                            <controls:DataGridTextColumn Header="Monthly Installment" Binding="{Binding Monthly}" Width="120"/>
                            <controls:DataGridTextColumn Header="Cust. Interest Rate" Binding="{Binding Effective}" Width="140"/>
                            <controls:DataGridTextColumn Header="Downpayment" Binding="{Binding Downpayment}" Width="120"/>
                            <controls:DataGridTextColumn Header="Cash Discount" Binding="{Binding CashDiscount}" Width="120"/>
                            <controls:DataGridTextColumn Header="FS SubDown" Binding="{Binding FSSubDown}" Width="120"/>
                            <controls:DataGridTextColumn Header="FS SubInterest" Binding="{Binding FSSubInterest}" Width="140"/>
                            <controls:DataGridTextColumn Header="FS FreeMBSP" Binding="{Binding FSFreeMBSP}" Width="120"/>
                            <controls:DataGridTextColumn Header="Subsidy utilized" Binding="{Binding SubsidyUsed}" Width="140"/>
                            <controls:DataGridTextColumn Header="Dealer Comm." Binding="{Binding DealerCommission}" Width="140"/>
                            <controls:DataGridTextColumn Header="Acq. RoRAC" Binding="{Binding RoRAC}" Width="120"/>
                            <controls:DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="220"/>
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>
                </Grid>
            </Border>

            <!-- My Campaigns -->
            <Border Grid.Row="1" Style="{StaticResource CardContainerStyle}" Margin="0,0,0,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="My Campaigns" Style="{StaticResource CardHeaderTextStyle}"/>
                        <Button Content="+ New Bank Campaign" Command="{Binding NewBankCampaignCommand}" Margin="12,0,0,0"/>
                        <Button Content="Load Campaigns" Command="{Binding LoadCampaignsCommand}"/>
                        <Button Content="Save All Changes" Command="{Binding SaveAllCampaignsCommand}"/>
                        <Button Content="Clear Campaigns" Command="{Binding ClearCampaignsCommand}"/>
                    </StackPanel>
                    <controls:DataGrid x:Name="MyGrid" Grid.Row="1"
                                       ItemsSource="{Binding MyCampaigns}"
                                       SelectedItem="{Binding SelectedMyCampaign, Mode=TwoWay}"
                                       HeadersVisibility="Column"
                                       CanUserSortColumns="False"
                                       CanUserReorderColumns="True"
                                       CanUserResizeColumns="True"
                                       AutoGenerateColumns="False"
                                       IsReadOnly="False"
                                       GridLinesVisibility="All"
                                       MinRowHeight="36">
                        <controls:DataGrid.Columns>
                            <!-- Placeholder for alignment with Standard Copy column -->
                            <controls:DataGridTemplateColumn Width="60">
                                <controls:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock/>
                                    </DataTemplate>
                                </controls:DataGridTemplateColumn.CellTemplate>
                            </controls:DataGridTemplateColumn>
                            <controls:DataGridTextColumn Header="Campaign Name" Binding="{Binding Title, Mode=TwoWay}" Width="200"/>
                            <controls:DataGridTextColumn Header="Monthly Installment" Binding="{Binding Monthly}" Width="120" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="Cust. Interest Rate" Binding="{Binding Effective}" Width="140" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="Downpayment" Binding="{Binding Downpayment}" Width="120" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="Cash Discount" Binding="{Binding CashDiscount}" Width="120" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="FS SubDown" Binding="{Binding FSSubDown}" Width="120" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="FS SubInterest" Binding="{Binding FSSubInterest}" Width="140" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="FS FreeMBSP" Binding="{Binding FSFreeMBSP}" Width="120" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="Subsidy utilized" Binding="{Binding SubsidyUsed}" Width="140" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="Dealer Comm." Binding="{Binding DealerCommission}" Width="140" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="Acq. RoRAC" Binding="{Binding RoRAC}" Width="120" IsReadOnly="True"/>
                            <controls:DataGridTextColumn Header="Notes" Binding="{Binding Notes, Mode=TwoWay}" Width="220"/>
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>
                </Grid>
            </Border>

            <!-- Insights: Details & Key Metrics (top) + Cashflows (bottom) -->
            <Border Grid.Row="2" Style="{StaticResource CardContainerStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Campaign Insights" Style="{StaticResource CardHeaderTextStyle}"/>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="12*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Details & Metrics -->
                        <Grid Grid.Row="0" Padding="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Campaign Details (left) -->
                            <StackPanel Grid.Column="0" Spacing="6">
                                <TextBlock Text="Campaign Details" Style="{StaticResource SectionHeaderTextStyle}"/>
                                <TextBlock>
                                    <Run Text="Selected: "/>
                                    <Run Text="{Binding ActiveCampaign.Title}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Type: "/>
                                    <Run Text="{Binding ActiveCampaign.CampaignType}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Dealer Commission: "/>
                                    <Run Text="{Binding ActiveCampaign.DealerCommission}"/>
                                </TextBlock>
                                <TextBlock>
                                    <Run Text="Subsidy Used: "/>
                                    <Run Text="{Binding ActiveCampaign.SubsidyUsed}"/>
                                </TextBlock>
                                <TextBlock Text="{Binding ActiveCampaign.Notes}" Opacity="0.75"/>
                            </StackPanel>

                            <!-- Key Metrics (right) -->
                            <StackPanel Grid.Column="1" Spacing="6">
                                <TextBlock Text="Key Metrics" Style="{StaticResource SectionHeaderTextStyle}"/>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Monthly Installment:" Style="{StaticResource LabelTextStyle}"/>
                                    <TextBlock Text="{Binding Metrics.MonthlyInstallment}" FontWeight="SemiBold"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Nominal Rate:" Style="{StaticResource LabelTextStyle}"/>
                                    <TextBlock Text="{Binding Metrics.NominalRate}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Effective Rate:" Style="{StaticResource LabelTextStyle}"/>
                                    <TextBlock Text="{Binding Metrics.EffectiveRate}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Financed Amount:" Style="{StaticResource LabelTextStyle}"/>
                                    <TextBlock Text="{Binding Metrics.FinancedAmount}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="Acq. RoRAC:" Style="{StaticResource LabelTextStyle}"/>
                                    <TextBlock Text="{Binding Metrics.RoRAC}"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <!-- Cashflows -->
                        <Grid Grid.Row="1" Padding="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Cashflow Schedule" Style="{StaticResource SectionHeaderTextStyle}"/>
                            <ListView Grid.Row="1" ItemsSource="{Binding Cashflows}">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="{Binding Period}" />
                                            <TextBlock Grid.Column="1" Text="{Binding Principal}" />
                                            <TextBlock Grid.Column="2" Text="{Binding Interest}" />
                                            <TextBlock Grid.Column="3" Text="{Binding Fees}" />
                                            <TextBlock Grid.Column="4" Text="{Binding Balance}" />
                                            <TextBlock Grid.Column="5" Text="{Binding Cashflow}" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- MARK: FOOTER -->
        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="Transparent" Padding="12,8" Margin="12,0,12,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding Status}" VerticalAlignment="Center" Opacity="0.8"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Export PDF" />
                    <Button Content="Save Scenario" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
